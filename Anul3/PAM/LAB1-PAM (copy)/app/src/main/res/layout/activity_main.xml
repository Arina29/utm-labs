<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.corina.android.lab1_pam.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Push Notification"
            android:id="@+id/btn_push_notification"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_to_search"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="8" />

        <Button
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="Google it"
            android:id="@+id/btn_google_it"
            android:layout_row="1"
            android:layout_column="8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Camera:"
            android:id="@+id/text_select_camera"
            android:layout_row="2"
            android:layout_column="0" />

        <RadioGroup
            android:layout_width="168dp"
            android:layout_height="75dp"
            android:layout_row="3"
            android:layout_column="0"
            android:id="@+id/radio_group_camera_type">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Front Camera"
                android:id="@+id/radio_option_front_cam" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back Camera"
                android:id="@+id/radio_option_back_cam" />
        </RadioGroup>

        <Button
            android:layout_width="139dp"
            android:layout_height="75dp"
            android:text="Open Camera"
            android:id="@+id/btn_open_camera"
            android:layout_row="3"
            android:layout_column="8"
            android:singleLine="true" />

    </GridLayout>

</RelativeLayout>

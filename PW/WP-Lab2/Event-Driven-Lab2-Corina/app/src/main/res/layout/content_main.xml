<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.iucosoft.android.event_driven_lab2_corina.MainActivity"
    android:id="@+id/main_view">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:id="@+id/scrollView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/big_text"
            android:id="@+id/textView3"
            android:layout_alignTop="@+id/scrollView"
            android:layout_alignParentStart="true"/>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_dialog"
        android:id="@+id/buttonOpenDialog"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/abc_hint_foreground_material_dark"
        android:drawableStart="@drawable/icon_lab_2"
        android:drawablePadding="2dp"
        android:layout_marginTop="73dp"
        android:padding="5dp"
        android:layout_below="@+id/edit_text_field"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_field"
        android:width="200dp"
        android:layout_below="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:textCursorDrawable="@drawable/black_cursor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_activity"
        android:id="@+id/button_go_to_list_view"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonOpenDialog"
        android:layout_alignEnd="@+id/buttonOpenDialog" />


</RelativeLayout>
